<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="demo1.AdminPanel"
        Title="Administation Panel">
    
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="List Users" 
                      FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
            
            <ListBox x:Name="UsersListBox" Height="400" 
                    SelectionChanged="UsersListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock  FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ID: " FontSize="10" Foreground="Gray"/>
                                <TextBlock  FontSize="10" Foreground="Gray"/>
                                <TextBlock Text=" | " FontSize="10" Foreground="Gray"/>
                                <TextBlock  FontSize="10" Foreground="Gray"/>
                                <TextBlock Text=" | " FontSize="10" Foreground="Gray"/>
                                <TextBlock  FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add users" 
                       Margin="5" Padding="10,5"/>
                <Button Content="Update Users" Click="RefreshUsers_Click" 
                       Margin="5" Padding="10,5"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="Editing Users" 
                      FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Основная информация -->
            <TextBlock Text="Login:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <TextBox x:Name="PasswordTextBox" Margin="0,0,0,15"/>

            
            <TextBlock Text="Role:" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <StackPanel Margin="0,0,0,15">
                <RadioButton x:Name="AdminRadio" Content="Admin" 
                            GroupName="Role" Margin="0,2"/>
                <RadioButton x:Name="UserRadio" Content="User" 
                            GroupName="Role" Margin="0,2" IsChecked="True"/>
            </StackPanel>

            
            <CheckBox x:Name="BannedCheckBox" Content="block" 
                     Margin="0,0,0,20"/>

            <Button Content="Save" Click="SaveUser_Click" 
                   Background="#2E7D32" Foreground="White"
                   Margin="0,0,0,5" Padding="10,5"/>
            
            <Button Content="block_take off" Click="UnbanUser_Click" 
                   Background="#1976D2" Foreground="White"
                   Margin="0,0,0,5" Padding="10,5"/>
            
            <Button Content="del user" Click="DeleteUser_Click" 
                   Background="#D32F2F" Foreground="White"
                   Margin="0,0,0,5" Padding="10,5"/>

            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                   Margin="0,20,0,0" Padding="10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Info user:" 
                              FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="UserInfoText" Text="Users:" 
                              FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>